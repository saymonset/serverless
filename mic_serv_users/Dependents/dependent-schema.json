{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Dependent",
    "type": "object",
    "required": ["name", "lastname", "birth", "gender", "relationship_id"],
    "properties": {
      "name": {
        "type": "string",
        "description": "The person's first name.",
        "default": ""
      },
      "lastname": {
        "type": "string",
        "description": "The person's lastname.",
        "default": ""
      },
      "birth": {
        "description": "Person's birth date.",
        "type": "string",
        "format": "date",
        "default": ""
      },
      "gender": {
        "description": "Person's gender",
        "type": "string",
        "default": ""
      },
      "relationship_id": {
        "description": "Relationship of Dependent to the user",
        "type": "string",
        "default": ""
      }
    }
  }