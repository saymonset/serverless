{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Vaccine",
    "type": "object",
    "required": ["name", "description", "desease", "dosis", "application_age"],
    "properties": {
      "name": {
        "type": "string",
        "description": "Vaccine name.",
        "default": ""
      },
      "description": {
        "type": "string",
        "description": "Vaccine description.",
        "default": ""
      },
      "desease": {
        "description": "Desease to prevent.",
        "type": "string",
        "default": ""
      },
      "dosis": {
        "description": "Requerired Dosis.",
        "type": "integer",
        "default": ""
      },
      "application_age": {
        "description": "Age when to be applied the vaccine.",
        "type": "array",
        "default": ""
      },
      "isChildren": {
        "description": "is Vaccine for ages lower 18 or not",
        "type": "boolean",
        "default": ""
      }
    }
  }